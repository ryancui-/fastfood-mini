/* pages/list-product/list-product.wxss */
.product-item {
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
  padding: 25rpx;
}

.product-row {
  width: 100%;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
}

.product-name {
  flex-grow: 1;
}

.product-price {
  color: red;
}