/**index.wxss**/
.group-item {
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
  padding: 25rpx;
}

.group-row {
  width: 100%;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
}

.group-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.group-composer-name {
  flex-grow: 1;
  padding-left: 20rpx;
}

.group-total-price {
  color: red;
  padding-right: 30rpx;
}

.no-records {
  text-align: center;
  margin-top: 50rpx;
  color: #A9A9A9;
}
