/**index.wxss**/
.group-item {
  margin: 20 rpx 0;
  border-radius: 15 rpx;
  background-color: white;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
  padding: 25 rpx;
}

.group-row {
  width: 100%;
  display: flex;
  padding: 10 rpx;
  box-sizing: border-box;
  align-items: center;
}

.group-avatar {
  height: 60 rpx;
  width: 60 rpx;
  border-radius: 50%;
}

.group-composer-name {
  flex-grow: 1;
  padding-left: 20 rpx;
}

.group-total-price {
  color: red;
  padding-right: 30 rpx;
}
