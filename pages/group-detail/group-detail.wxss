/* pages/group-detail/group-detail.wxss */
.owner-panel {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.owner-btn {
  flex-grow: 1;
  margin: 0 10rpx;
}

.order-item {
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
  padding: 25rpx;
}

.order-row {
  width: 100%;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
}

.order-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.order-product-name {
  flex-grow: 1;
  padding-left: 30rpx;
}

.order-total-price {
  padding: 0 30rpx;
  color: red;
  font-size: 42rpx;
}

.no-records {
  text-align: center;
  margin-top: 50rpx;
  color: #A9A9A9;
}
